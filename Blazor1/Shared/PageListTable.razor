<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-striped">
        <tr>
            <th>Name</th>    
            <th>Level</th>
            <th>ReleaseDate</th>
            <th><input type="checkbox" @onchange="(() => displayButtons = !displayButtons)"></th>
        </tr>
        </thead>
        <tbody>
        @if (Pages == null)//если еще ничего не загрузилось
        {
            <tr>Loading data...</tr>
        }
        else if (Pages.Count == 0)//если отсутствует какая либо инфа
        {
            <tr> No items in array</tr>
        }
        else 
        {
            @foreach (var item in Pages)
            {
                <IndividualPage Page="item" IsTable="true" DisplayButtons="displayButtons"/>
              @*  <tr>
                    <td>@item.Name</td>
                    <td>@item.Level</td>
                    <td>@item.ReleaseDate.ToString("dd.MM.yyyy")</td>
                </tr>*@
            }
        }
        </tbody>
    </table>
</div>

@code {

