@using Microsoft.VisualBasic

<div class="row">
    <div class="col text-center">
        <h1>Welcome to my page!</h1>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <h2>Show all pages in MOC database: </h2>
    </div>
</div>
@*<PageListTable/>  вызываем нашу таблицу *@

<PageListTable Pages="pages" />

<IndividualPage Page="onePageToShow" IsTable="false" DisplayButtons="true" SwitchPage="ShowNewPage"/>

@code {

    List<Page> pages;

    Random rnd;
    Page onePageToShow;
    
    protected override void OnInitialized()
    {
        pages = new List<Page>()
        {
            new Page()
            {
                Name = "My first project",
                Level = "junior",
                ReleaseDate = new DateTime(2021, 08, 19)
            },
            new Page()
            {
                Name = "My 108 project",
                Level = "Still junior",
                ReleaseDate = new DateTime(2021, 08, 30)
            },
            new Page()
            {
                Name = "My 1009 project",
                Level = "Also junior",
                ReleaseDate = new DateTime(2021, 09, 15)
            },
        };

        rnd = new Random(DateTime.Now.Millisecond);
        onePageToShow = pages[rnd.Next(0, pages.Count)];
    }

    void ShowNewPage()
    {
        onePageToShow = SwitchPage();
    }
    
    Page SwitchPage()
    {
        Page tempPage;

        if (pages.Count >= 2)
        {
            int iterator = rnd.Next(0, pages.Count);
            tempPage = pages[iterator];
        }
        else if (pages.Count == 1)
            tempPage = pages[0];
        else
            return new Page() {Name = "No items in array", ReleaseDate = DateTime.Now};
        
        return tempPage;
    }
} 